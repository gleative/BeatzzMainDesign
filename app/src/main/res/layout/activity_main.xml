<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gleative.spotifylayout.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xD"
        />

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <Button
            android:id="@+id/button1.1"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/button1.2"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/button1.3"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/button1.4"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstRow">

        <Button
            android:id="@+id/button2.1"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/button2.2"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/button2.3"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/button2.4"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondRow">

        <Button
            android:id="@+id/button3.1"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/button3.2"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/button3.3"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/button3.4"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thirdRow">

        <Button
            android:id="@+id/button4.1"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/button4.2"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/button4.3"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/button4.4"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
